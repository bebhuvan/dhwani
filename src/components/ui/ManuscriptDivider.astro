---
// Subtle manuscript-inspired decorative divider
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class={`flex items-center justify-center my-8 ${className}`} aria-hidden="true">
  <!-- Simple lotus-inspired motif -->
  <svg width="32" height="8" viewBox="0 0 32 8" fill="none" xmlns="http://www.w3.org/2000/svg" class="text-accent opacity-20">
    <circle cx="16" cy="4" r="2" fill="currentColor"/>
    <circle cx="8" cy="4" r="1.5" fill="currentColor"/>
    <circle cx="24" cy="4" r="1.5" fill="currentColor"/>
    <circle cx="4" cy="4" r="1" fill="currentColor"/>
    <circle cx="28" cy="4" r="1" fill="currentColor"/>
  </svg>
</div>
