---
export interface Props {
  variant?: 'primary' | 'secondary' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  class: className = ''
} = Astro.props;

const baseStyles = 'inline-flex items-center justify-center font-medium rounded-sm transition-all duration-200 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2';

const variantStyles = {
  primary: 'bg-accent text-paper hover:bg-accent-light active:bg-burgundy shadow-sm hover:shadow-md',
  secondary: 'bg-warm-white text-ink border-2 border-line hover:border-accent hover:text-accent active:bg-accent-wash',
  ghost: 'text-ink-light hover:text-accent hover:bg-accent-wash',
};

const sizeStyles = {
  sm: 'text-[0.875rem] px-6 py-2.5 tracking-[0.01em]',
  md: 'text-[0.95rem] px-10 py-4 tracking-[0.02em]',
  lg: 'text-[1.05rem] px-12 py-5 tracking-[0.02em]',
};

const combinedClass = `${baseStyles} ${variantStyles[variant]} ${sizeStyles[size]} ${className}`;

const Tag = href ? 'a' : 'button';
---

<Tag href={href} class={combinedClass}>
  <slot />
</Tag>
