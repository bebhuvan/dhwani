---
export interface Props {
  title: string;
  description: string;
  href: string;
  index: number;
  class?: string;
}

const {
  title,
  description,
  href,
  index,
  class: className = ''
} = Astro.props;

const romanNumerals = ['I', 'II', 'III', 'IV', 'V', 'VI'];
---

<a
  href={href}
  class={`group flex flex-col p-10 bg-warm-white border-2 border-line hover:border-accent transition-all duration-300 hover:shadow-lg ${className}`}
>
  <div class="font-serif text-[1rem] font-semibold text-accent mb-6 tracking-[0.08em]">
    {romanNumerals[index] || index + 1}
  </div>

  <h3 class="font-serif text-[1.85rem] font-semibold tracking-[0.005em] text-ink mb-5 leading-[1.3] group-hover:text-accent transition-colors">
    {title}
  </h3>

  <p class="font-serif-body text-[0.975rem] leading-[1.8] text-ink-medium font-light mb-auto">
    {description}
  </p>

  <div class="pt-7 border-t border-line-light mt-8 flex items-center justify-between">
    <span class="text-[0.75rem] uppercase tracking-[0.08em] text-ink-lighter font-medium group-hover:text-accent transition-colors">
      View Collection
    </span>
    <span class="text-accent text-lg group-hover:translate-x-1 transition-transform">â†’</span>
  </div>
</a>
