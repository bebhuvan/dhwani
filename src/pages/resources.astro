---
import BaseLayout from '../layouts/BaseLayout.astro';

const resources = [
  {
    name: 'Project Gutenberg',
    url: 'https://www.gutenberg.org',
    description: 'The world\'s oldest digital library, offering over 70,000 free eBooks including numerous Indian classics and translations.'
  },
  {
    name: 'Digital Library of India',
    url: 'https://archive.org/details/digitallibraryindia',
    description: 'A massive digitization project preserving Indian cultural heritage with hundreds of thousands of books in multiple Indian languages.'
  },
  {
    name: 'JaiGyan Collection',
    url: 'https://archive.org/details/JaiGyan',
    description: 'A curated collection of rare Sanskrit texts, Hindu scriptures, and classical Indian philosophical works.'
  },
  {
    name: 'Sanchaya',
    url: 'https://sanchaya.org/?lang=en',
    description: 'A digital repository preserving Kannada literary heritage, ancient manuscripts, and cultural texts.'
  },
  {
    name: 'Daasa Sahitya - Sanchaya',
    url: 'https://daasa.sanchaya.net',
    description: 'Dedicated collection of Daasa literature, devotional compositions by medieval Kannada poet-saints.'
  },
  {
    name: 'Vachana Sahitya - Sanchaya',
    url: 'https://vachana.sanchaya.net',
    description: 'Digital archive of Vachana literature, profound spiritual prose-poetry by 12th-century Kannada mystics.'
  },
  {
    name: 'Sacred Texts: Hinduism',
    url: 'https://sacred-texts.com/hin/index.htm',
    description: 'Comprehensive collection of Hindu sacred texts, scriptures, and philosophical works in English translation.'
  }
];
---

<BaseLayout title="Resources - Dhwani" description="Essential digital libraries and archives for exploring Indian literary and cultural heritage">
  <main>
    <article class="py-16 md:py-20 lg:py-24 px-6 md:px-8 lg:px-12">
      <div class="max-w-[680px] mx-auto">
        <h1 class="font-serif text-[clamp(2.75rem,7vw,4.5rem)] font-normal leading-[1.12] tracking-[-0.02em] text-ink mb-8 md:mb-10">
          Resources
        </h1>

        <p class="font-serif-body text-[1.05rem] md:text-[1.15rem] leading-[1.85] text-ink-light font-normal mb-16 md:mb-20">
          Dhwani aggregates links from these essential digital libraries and archives that are preserving our shared literary and cultural heritage. Each resource represents decades of dedication to making knowledge freely accessible.
        </p>

        <div class="space-y-8 md:space-y-10">
          {resources.map((resource) => (
            <a
              href={resource.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group block p-6 md:p-8 bg-paper hover:bg-accent-wash border border-line hover:border-accent transition-all duration-300 rounded-sm"
            >
              <div class="flex justify-between items-start gap-4">
                <div class="flex-1">
                  <h2 class="font-serif text-[1.35rem] md:text-[1.5rem] font-normal text-ink group-hover:text-accent transition-colors mb-3">
                    {resource.name}
                  </h2>
                  <p class="font-serif-body text-[0.95rem] md:text-[1.0rem] leading-[1.75] text-ink-light font-light">
                    {resource.description}
                  </p>
                </div>
                <div class="text-accent opacity-50 group-hover:opacity-100 group-hover:translate-x-1 transition-all flex-shrink-0 mt-1">
                  <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>

        <div class="mt-16 md:mt-20 pt-12 border-t border-line">
          <p class="font-serif-body text-[0.95rem] md:text-[1.0rem] leading-[1.75] text-ink-medium font-light">
            Know of other valuable resources for Indian public domain works? We'd love to hear about them. <a href="/about" class="text-accent hover:text-accent-light border-b border-accent border-opacity-30 hover:border-opacity-100 transition-all">Get in touch</a>.
          </p>
        </div>
      </div>
    </article>
  </main>
</BaseLayout>
