---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import SectionHeader from '../components/ui/SectionHeader.astro';
import FeaturedWork from '../components/ui/FeaturedWork.astro';
import WorkCard from '../components/ui/WorkCard.astro';
import CollectionCard from '../components/ui/CollectionCard.astro';
import ManuscriptDivider from '../components/ui/ManuscriptDivider.astro';
import DualNumeral from '../components/ui/DualNumeral.astro';
import { getCollection } from 'astro:content';

const allWorks = await getCollection('works');

// Featured works: rotate through collection based on day of year
// This ensures different works are featured each day
const getDayOfYear = () => {
  const now = new Date();
  const start = new Date(now.getFullYear(), 0, 0);
  const diff = now.getTime() - start.getTime();
  return Math.floor(diff / (1000 * 60 * 60 * 24));
};

const dayOffset = getDayOfYear();
const featuredCount = 3;

// Get featured works if they exist, otherwise rotate through all works
const manuallyFeatured = allWorks.filter(({ data }) => data.featured);
const featuredWorks = manuallyFeatured.length >= featuredCount
  ? manuallyFeatured.slice(0, featuredCount)
  : allWorks
      .sort((a, b) => a.data.title.localeCompare(b.data.title)) // Alphabetical for consistency
      .slice(dayOffset % allWorks.length, (dayOffset % allWorks.length) + featuredCount)
      .concat(allWorks.slice(0, Math.max(0, featuredCount - allWorks.length + (dayOffset % allWorks.length))))
      .slice(0, featuredCount);

const recentWorks = allWorks
  .sort((a, b) => {
    return b.data.publishDate.valueOf() - a.data.publishDate.valueOf();
  })
  .slice(0, 6);

// Calculate statistics
const totalWorks = allWorks.length;
const totalAuthors = [...new Set(allWorks.flatMap(work => work.data.author))].length;
const totalLanguages = [...new Set(allWorks.flatMap(work => work.data.language))].length;

// Collections data
const collections = [
  {
    title: 'Ancient Wisdom',
    description: 'Vedic hymns, Upanishads, and epics that have guided minds for millennia. The philosophical foundations of Indian thought—from ritual to metaphysics.',
    href: '/collections#ancient-wisdom',
  },
  {
    title: 'Regional Voices',
    description: 'Stories in Bengali, verses in Tamil, wisdom in Malayalam. India speaks in many tongues, each with its own literary legacy and cultural richness.',
    href: '/collections#regional-voices',
  },
  {
    title: 'Modern Literature',
    description: 'Writers who shaped the modern Indian imagination—from Tagore\'s poetry to Gandhi\'s political philosophy and beyond.',
    href: '/collections#modern-literature',
  },
];
---

<BaseLayout title="Dhwani - A Treasury of Indian Literary Heritage">
  <main>
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <div class="max-w-[1100px] mx-auto px-6 md:px-8 lg:px-12 py-24 md:py-32 lg:py-40">

        <div class="max-w-[52rem] mx-auto mb-20 md:mb-24 text-center">
          <h1 class="font-serif text-[2.75rem] md:text-[3.75rem] lg:text-[4.25rem] font-normal leading-[1.1] tracking-[-0.015em] text-ink mb-8 md:mb-10">
            The words that shaped <span class="text-accent">a civilization</span>
          </h1>

          <div class="max-w-[46rem] mx-auto mb-10 md:mb-12">
            <p class="font-serif text-[1.1875rem] md:text-[1.3125rem] leading-[1.65] text-ink-light font-normal">
              India's literary heritage—the Vedas and Upanishads, Kalidasa and Tagore, centuries of philosophy, poetry, and thought—exists scattered across the internet. <span class="text-ink font-medium">Dhwani</span> is a directory to find it all.
            </p>
          </div>

          <div class="flex flex-wrap gap-3 justify-center items-center">
            <a href="/archive/1" class="inline-flex items-center gap-2 px-7 py-3.5 text-[0.9375rem] text-paper bg-ink hover:bg-ink-medium transition-all duration-200 font-normal tracking-wide">
              Browse Archive
            </a>
            <a href="/about" class="inline-flex items-center gap-1.5 px-6 py-3 text-[0.9375rem] text-ink-medium hover:text-ink transition-colors duration-200 font-normal">
              Learn more →
            </a>
          </div>
        </div>

        <!-- Stats - refined -->
        <div class="border-t border-line pt-10 flex flex-wrap justify-center gap-x-16 gap-y-4 text-[0.8125rem] uppercase tracking-wider text-ink-lighter">
          <div class="flex items-baseline gap-2">
            <DualNumeral value={totalWorks} class="text-ink text-[2rem] font-normal font-serif" showDevanagari={false} />
            <span>Works</span>
          </div>
          <div class="flex items-baseline gap-2">
            <DualNumeral value={totalAuthors} class="text-ink text-[2rem] font-normal font-serif" showDevanagari={false} />
            <span>Authors</span>
          </div>
          <div class="flex items-baseline gap-2">
            <DualNumeral value={totalLanguages} class="text-ink text-[2rem] font-normal font-serif" showDevanagari={false} />
            <span>Languages</span>
          </div>
        </div>
      </div>
    </section>

    <!-- Mission Statement -->
    <section class="border-y border-line">
      <div class="max-w-[1100px] mx-auto px-6 md:px-8 lg:px-12 py-14 md:py-16">
        <div class="max-w-[42rem] mx-auto text-center">
          <p class="font-serif text-[1.25rem] md:text-[1.375rem] leading-[1.6] text-ink-medium font-normal">
            A civilization with millennia of literary tradition has no Project Gutenberg of its own. Dhwani is an attempt to fix that—incomplete, imperfect, but here.
          </p>
        </div>
      </div>
    </section>

    <!-- Featured Works -->
    {featuredWorks.length > 0 && (
      <section class="border-t border-line py-24 md:py-32">
        <div class="max-w-[1100px] mx-auto px-6 md:px-8 lg:px-12">
          <h2 class="font-serif text-[1.75rem] md:text-[2rem] font-normal text-ink mb-16 md:mb-20">
            Essential works
          </h2>

          <div>
            {featuredWorks.map((work, index) => (
              <FeaturedWork
                title={work.data.title}
                author={work.data.author}
                language={work.data.language}
                year={work.data.year}
                genre={work.data.genre}
                description={work.data.description}
                href={`/works/${work.slug}`}
                index={index}
              />
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- Recently Added -->
    <section class="py-24 md:py-32 border-t border-line">
      <div class="max-w-[1100px] mx-auto px-6 md:px-8 lg:px-12">
        <div class="mb-16 md:mb-20 flex items-center justify-between">
          <h2 class="font-serif text-[1.75rem] md:text-[2rem] font-normal text-ink">
            Recently Added
          </h2>
          <a href="/archive/1" class="hidden md:inline-flex items-center gap-1.5 text-[0.875rem] text-ink-lighter hover:text-ink transition-colors">
            View all
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-x-14 gap-y-14 md:gap-y-20">
          {recentWorks.map((work) => (
            <WorkCard
              title={work.data.title}
              author={work.data.author}
              language={work.data.language}
              year={work.data.year}
              genre={work.data.genre}
              description={work.data.description}
              href={`/works/${work.slug}`}
            />
          ))}
        </div>

        <div class="mt-12 md:mt-16 text-center md:hidden">
          <a href="/archive/1" class="inline-flex items-center gap-1 text-[0.9375rem] text-ink hover:text-ink-medium transition-colors font-medium">
            View all works →
          </a>
        </div>
      </div>
    </section>

    <!-- Collections -->
    <section class="py-24 md:py-32 border-t border-line">
      <div class="max-w-[1100px] mx-auto px-6 md:px-8 lg:px-12">
        <div class="mb-16 md:mb-20">
          <h2 class="font-serif text-[1.75rem] md:text-[2rem] font-normal text-ink mb-4">
            Browse by collection
          </h2>
          <p class="font-serif text-[1.0625rem] leading-[1.7] text-ink-light max-w-[42rem]">
            Curated groupings that trace the arc of Indian literary tradition
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-10">
          {collections.map((collection, index) => (
            <a href={collection.href} class="group block p-10 md:p-12 bg-paper border border-line hover:border-ink-light transition-all duration-200">
              <div class="flex items-start justify-between mb-6">
                <span class="font-serif text-[5rem] text-accent leading-none font-light" style="opacity: 0.12;">
                  {String(index + 1).padStart(2, '0')}
                </span>
                <svg class="w-5 h-5 text-accent opacity-50 group-hover:opacity-100 group-hover:translate-x-0.5 transition-all shrink-0 mt-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
              <h3 class="font-serif text-[1.5rem] font-medium text-ink mb-4 group-hover:text-accent transition-colors duration-200 leading-[1.25]">
                {collection.title}
              </h3>
              <p class="font-serif-body text-[1rem] leading-[1.75] text-ink-medium font-normal">
                {collection.description}
              </p>
            </a>
          ))}
        </div>

        <div class="mt-16 md:mt-20 text-center">
          <a href="/collections" class="inline-flex items-center gap-2 px-7 py-3.5 text-[0.9375rem] text-paper bg-ink hover:bg-ink-medium transition-all duration-200 font-normal tracking-wide">
            View all collections
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
