{
  "name": "dhwani",
  "type": "module",
  "version": "2.0.0",
  "scripts": {
    "dev": "astro dev",
    "build": "npm run generate-og && astro build && npm run pagefind && npm run generate-related",
    "preview": "astro preview",
    "deploy": "npm run build && wrangler deploy",
    "deploy:production": "npm run build && wrangler deploy --env production",
    "cf:dev": "wrangler dev",
    "pagefind": "pagefind --source dist --glob \"**/*.html\"",
    "generate-related": "node scripts/generate-related-works.js",
    "generate-og": "node scripts/generate-og-image.js",
    "import-content": "node scripts/import-content.js",
    "optimize-fonts": "node scripts/optimize-fonts.js",
    "validate-content": "node scripts/validate-content.js",
    "intake:csv": "node scripts/seed-research-from-csv.js ../Downloads/india_pd_2012_2022_master_with_search_links.csv",
    "intake:json": "node scripts/import-json-candidates.js ../women_social_reform_india_works.json ../indian_art_archaeology_works.json ../indian_works_uc_libraries.json",
    "harvest:archive": "node scripts/harvest-archive-authors.js ../Downloads/india_pd_2012_2022_master_with_search_links.csv --perAuthor 25",
    "harvest:gutenberg": "node scripts/harvest-gutenberg-authors.js ../Downloads/india_pd_2012_2022_master_with_search_links.csv --perAuthor 10",
    "shortlist:mark": "node scripts/mark-priority-from-files.js",
    "dups:mark": "node scripts/mark-duplicates-from-report.js",
    "shortlist:export": "node scripts/export-priority-queue.js",
    "dup:check:new": "node verification-tools/duplicate-detector.js new-candidates-2 src/content/works 0.82",
    "pd:verify:new": "node verification-tools/pd-verifier.js new-candidates-2",
    "validate:new": "node verification-tools/content-checkpoint-validator.js new-candidates-2",
    "archive:validate:new": "node verification-tools/archive-org-validator.js new-candidates-2",
    "promote": "node scripts/promote-candidate.js",
    "drafts:from-tracker": "node scripts/generate-new-works-from-tracker.js",
    "augment": "node scripts/augment-new-works.js",
    "pad": "node scripts/pad-new-works.js",
    "import:json": "node scripts/import-from-json.js ../indian_works_uc_libraries.json ../women_social_reform_india_works.json ../indian_art_archaeology_works.json"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.10",
    "@astrojs/mdx": "^4.3.6",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^6.0.2",
    "astro": "^5.14.8",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "lightningcss": "^1.30.2",
    "pagefind": "^1.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1"
  }
}
